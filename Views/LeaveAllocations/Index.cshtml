@model LeaveManager.Models.LeaveAllocationVM

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="d-flex justify-content-between my-3">
        <div class="d-flex align-items-center"><span>Show</span>&nbsp;
            <select type="search" class="form-control form-control-sm">
                <option value="10">10</option>
                <option value="20">20</option>
                <option value="30">30</option>
                <option value="40">40</option>
                <option value="50">50</option>
            </select>&nbsp;
            <span>entries</span>
        </div>
        <div class="d-flex align-items-center"><span class="d-block">Search:</span>&nbsp;<input type="search" class="form-control form-control-sm"/></div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.LeaveTypes.FirstOrDefault().Name)</th>
                <th>@Html.DisplayNameFor(model => model.LeaveTypes.FirstOrDefault().DefaultDays)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.LeaveTypes){
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.DefaultDays)</td>
                    <td class="d-flex justify-content-end">
                        @Html.ActionLink("Allocate to Employees", "SetLeave", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-success"})
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>