@model LeaveManager.Models.LeaveTypeCreateVM

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h2 class="d-flex justify-content-center my-5">Create</h2>
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DefaultDays" class="control-label"></label>
                    <input type="number" min="1" max="25" asp-for="DefaultDays" class="form-control"/>
                    <span asp-validation-for="DefaultDays" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success btn-block"/>
                </div>
            </form>
            <a class="btn btn-secondary btn-block" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>